<div class="min-h-screen flex flex-col items-center justify-center bg-black text-white">
  <div class="w-full max-w-sm bg-gray-900 p-8 rounded-2xl shadow-lg">
    <div class="flex justify-center mb-6">
      <div class="flex items-center space-x-2">
        <div class="bg-red-600 p-2 rounded">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M10 15V9l5 3-5 3z"/>
          </svg>
        </div>
        <span class="text-2xl font-semibold">YouTube0.2</span>
      </div>
    </div>

    <h2 class="text-center text-xl font-bold mb-6">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, class: "w-full p-2 rounded bg-gray-800 border border-gray-700 focus:ring-2 focus:ring-red-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded bg-gray-800 border border-gray-700 focus:ring-2 focus:ring-red-500" %>
      </div>

      <div class="flex items-center mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm" %>
      </div>

      <%= f.submit "Sign in", class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded" %>
    <% end %>

    <div class="text-center mt-6 text-sm space-y-2">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-red-400 hover:underline" %><br>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-400 hover:underline" %>
    </div>
  </div>

  <footer class="mt-8 text-center text-gray-500 text-xs">
    <p>Â© 2025 YouTube0.2. All rights reserved.</p>
  </footer>
</div>
