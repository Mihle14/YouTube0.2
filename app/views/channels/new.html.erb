<div class="min-h-screen flex flex-col items-center justify-center bg-black text-white px-4">
  <h1 class="text-3xl font-bold mb-6">Create Your Channel</h1>

  <div class="w-full max-w-lg bg-[#181818] p-6 rounded-lg shadow-lg">
    <%= form_with(model: @channel, local: true, html: { multipart: true }) do |f| %>
      <div class="mb-4">
        <%= f.label :name, "Channel Name", class: "block mb-2 font-medium" %>
        <%= f.text_field :name, placeholder: "Enter channel name", class: "w-full px-4 py-2 rounded bg-[#272727] text-white focus:outline-none focus:ring-2 focus:ring-red-600" %>
      </div>
      <div class="mb-4">
        <%= f.label :description, "Description", class: "block mb-2 font-medium" %>
        <%= f.text_area :description, placeholder: "Describe your channel", rows: 4, class: "w-full px-4 py-2 rounded bg-[#272727] text-white focus:outline-none focus:ring-2 focus:ring-red-600" %>
      </div>
      <div class="mb-4">
        <%= f.label :avatar, "Profile Picture", class: "block mb-2 font-medium" %>
        <%= f.file_field :avatar, class: "w-full text-white" %>
      </div>
      <div class="mb-6">
        <%= f.label :banner, "Banner Image", class: "block mb-2 font-medium" %>
        <%= f.file_field :banner, class: "w-full text-white" %>
      </div>
      <div>
        <%= f.submit "Create Channel", class: "bg-red-600 hover:bg-red-700 px-6 py-2 rounded text-white font-bold w-full" %>
      </div>

    <% end %>
  </div>
</div>
