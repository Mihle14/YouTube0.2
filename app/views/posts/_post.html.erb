<div id="<%= dom_id post %>" class="bg-[#181818] rounded-xl overflow-hidden shadow-md hover:scale-105 transition-transform w-64">
  <% if post.video.attached? %>
    <video controls class="w-full h-36 object-cover">
      <source src="<%= url_for(post.video) %>" type="<%= post.video.content_type %>">
      Your browser does not support the video tag.
    </video>

  <% elsif post.image.attached? %>
    <%= image_tag post.image, class: "w-full h-36 object-cover" %>

  <% else %>
    <div class="w-full h-36 flex items-center justify-center bg-gray-700 text-gray-400">
      No image or video
    </div>
  <% end %>

  <div class="p-3">
    <h3 class="text-base font-semibold mb-1 truncate"><%= post.title %></h3>
    <p class="text-gray-400 text-sm mb-2 line-clamp-2"><%= post.description %></p>

    <div class="flex justify-between text-gray-500 text-xs mb-2">
      <span>ğŸ‘ï¸ <%= post.views || 0 %></span>
      <span>ğŸ‘ <%= post.likes || 0 %></span>
      <span><%= time_ago_in_words(post.created_at) %> ago</span>
    </div>

    <%= link_to "Show", post, class: "block text-blue-400 hover:text-blue-300 text-sm font-medium text-center" %>
  </div>
</div>
