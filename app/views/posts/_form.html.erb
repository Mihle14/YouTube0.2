<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :video, style: "display: block" %>
    <%= form.file_field :video %>
  </div>

  <div class="mb-4">
    <%= form.label :thumbnail, "Upload Thumbnail (optional)", class: "block mb-1 text-sm font-medium" %>
    <%= form.file_field :thumbnail, class: "w-full p-2 bg-[#121212] border border-[#3f3f3f] rounded-lg text-white" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Create Post", class: "bg-blue-500 text-white px-4 py-2 rounded mt-2" %>
  </div>
<% end %>
