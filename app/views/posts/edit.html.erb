<div class="min-h-screen bg-neutral-950 text-white flex flex-col items-center py-16 px-6">
  
  <h1 class="text-3xl font-bold mb-10 border-b border-neutral-800 pb-4 w-full max-w-3xl text-left">
    ✏️ Edit Image Details
  </h1>


  <div class="w-full max-w-3xl bg-neutral-900 rounded-2xl shadow-lg border border-neutral-800 p-8">

    <div class="space-y-8">
      <%= render "form", post: @post %>
    </div>

    <div class="flex justify-between items-center mt-10">
      <div class="flex gap-4">
        <%= link_to "Show this Images", @post, class: "px-4 py-2 rounded-lg text-sm bg-neutral-800 hover:bg-neutral-700 transition" %>
        <%= link_to "Back to Images", posts_path, class: "px-4 py-2 rounded-lg text-sm bg-neutral-800 hover:bg-neutral-700 transition" %>
      </div>
      <%= button_to "Save Changes", post_path(@post), method: :patch, class: "bg-red-600 hover:bg-red-700 text-white font-semibold px-5 py-2 rounded-lg shadow-md transition" %>
    </div>
  </div>
</div>

