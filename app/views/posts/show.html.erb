<div class="min-h-screen bg-black text-white px-4 md:px-12 py-8 flex justify-center">
  <div class="flex flex-col md:flex-row gap-8 w-full max-w-[1280px] md:ml-60">
    <div class="flex-1 max-w-3xl">

      <div class="flex justify-end gap-4 mb-4">
        <%= link_to edit_post_path(@post),
            class: "px-4 py-2 rounded-md bg-gray-700 text-white hover:bg-gray-600 transition font-medium flex items-center gap-2" do %>
          <i class="fas fa-pencil-alt"></i> Edit
        <% end %>

        <%= button_to post_path(@post),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "px-4 py-2 rounded-md bg-gray-700 text-white hover:bg-gray-600 transition font-medium flex items-center gap-2" do %>
          <i class="fas fa-trash"></i> Delete
        <% end %>
      </div>

      <div class="w-full mb-4">
        <% if @post.video.attached? %>
          <video controls class="w-full rounded-xl shadow-lg">
            <source src="<%= url_for(@post.video) %>" type="<%= @post.video.content_type %>">
            Your browser does not support the video tag.
          </video>
        <% elsif @post.image.attached? %>
          <%= image_tag @post.image, class: "w-full rounded-xl shadow-lg" %>
        <% end %>
      </div>
      
      <h1 class="text-2xl md:text-3xl font-bold mb-2"><%= @post.title %></h1>
      <p class="text-gray-400 mb-4">Views: <%= @post.views %></p>

      <div class="flex items-center justify-between mb-4">
        <div></div>
        <div class="flex items-center bg-[#272727] rounded-full overflow-hidden border border-[#3f3f3f]">
            <%= render "posts/reactions", post: @post %>
            <%= render "posts/reaction_buttons", post: @post %>
        </div>
      </div>

      <div class="bg-[#272727] p-4 rounded-xl mb-6 border border-[#3f3f3f]">
        <p class="text-gray-300 whitespace-pre-line"><%= @post.description %></p>
      </div>

      <div class="bg-[#272727] p-4 rounded-xl border border-[#3f3f3f]">
        <h2 class="text-xl font-semibold mb-4 text-white">Comments (<%= @post.comments.count %>)</h2>

        <div id="comments">
          <%= turbo_frame_tag "comments" do %>
            <%= render @post.comments.where(parent_id: nil) %>
          <% end %>
        </div>
        <% if user_signed_in? %>
          <%= form_with model: [@post, Comment.new], local: false, class: "mb-6" do |f| %>
            <div class="flex gap-2 items-center">
              <%= f.text_field :body,
                placeholder: "Add a comment...",
                class: "flex-1 p-2 rounded-lg bg-[#121212] text-white border border-[#3f3f3f]" %>
              <%= f.submit "Comment",
                class: "px-4 py-2 rounded-lg bg-[#3f3f3f] text-white hover:bg-[#4a4a4a] transition" %>
            </div>
          <% end %>
        <% end %>

        <% @post.comments.where(parent_id: nil).each do |comment| %>
          <div class="border-l-2 border-[#3f3f3f] pl-4 mb-6">
            <div class="flex justify-between items-start">
              <div>
                <p class="text-gray-200 font-semibold"><%= comment.user.email %></p>
                <p class="text-gray-300 mb-2"><%= comment.body %></p>
              </div>
              <% if user_signed_in? %>
                <%= button_to "Delete",
                    post_comment_path(@post, comment),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "text-red-500 hover:text-red-700 text-sm ml-2 px-2 py-1 rounded" %>
              <% end %>
            </div>

            <% comment.replies.each do |reply| %>
              <div class="ml-6 border-l border-[#3f3f3f] pl-3 mt-2 flex justify-between items-start">
                <div>
                  <p class="text-gray-400 text-sm font-semibold"><%= reply.user.email %></p>
                  <p class="text-gray-400 text-sm"><%= reply.body %></p>
                </div>
                <% if user_signed_in? %>
                  <%= button_to "Delete",
                      post_comment_path(@post, reply),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "text-red-500 hover:text-red-700 text-sm ml-2 px-2 py-1 rounded" %>
                <% end %>
              </div>
            <% end %>

            <% if user_signed_in? %>
              <%= form_with model: [@post, Comment.new], local: false, class: "mt-2 flex gap-2" do |f| %>
                <%= f.hidden_field :parent_id, value: comment.id %>
                <%= f.text_field :body,
                  placeholder: "Reply...",
                  class: "flex-1 p-2 rounded-lg bg-[#121212] text-white border border-[#3f3f3f]" %>
                <%= f.submit "Reply",
                  class: "px-3 py-1 rounded-lg bg-[#3f3f3f] text-white hover:bg-[#4a4a4a] transition" %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
