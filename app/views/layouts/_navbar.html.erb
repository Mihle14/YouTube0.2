<nav class="bg-black text-black px-4 py-3 shadow-md flex justify-between items-center">
  
  <div class="flex items-center space-x-2">
    <%= link_to root_path, class: "flex items-center space-x-2" do %>
      <%= image_tag "YouTube_icon.png" , alt: "YouTube Logo" , style: "height: 30px ; width: 50px" %>
      <span class="text-white font-bold text-lg">YouTube0.2</span>
    <% end %>
  </div>

  <div class="flex-1 mx-4 max-w-md">
    <form action="<%= posts_path %>" method="get" class="flex">
      <input 
      type="text" 
      name="query" 
      placeholder="Search" 
      class="flex-1 px-4 py-2 rounded-l-full border border-gray-700 bg-gray-900 text-white focus:outline-none focus:border-white"
    >

    <button 
      type="submit" 
      class="px-4 py-2 bg-gray-800 border border-gray-700 rounded-r-full hover:bg-gray-700 flex items-center justify-center"
    >
      <i class="fas fa-search text-white"></i>
    </button>
    </form>
  </div>

  <div class="flex items-center space-x-4">
    <% if user_signed_in? %>
      
      <%= link_to new_post_path, class: "hover:text-white" do %>
        <i class="fas fa-video"></i>
      <% end %>

      <i class="fas fa-bell hover:text-white"></i>
      
      <%= link_to edit_user_registration_path, class: "bg-gray-900 text-white px-3 py-1 rounded hover:bg-gray-800" do %>
        <i class="fas fa-user-circle text-2xl"></i>
        <span class="hidden md:block"><%= current_user.email %></span>
      <% end %>

      <%= link_to "Sign Out", destroy_user_session_path,
          data: { turbo_method: :delete },
          class: "bg-gray-900 text-white px-3 py-1 rounded hover:bg-gray-800" %>

    <% else %>
      
      <%= link_to "Sign In", new_user_session_path,
          class: "bg-gray-900 text-white px-3 py-1 rounded hover:bg-gray-800" %>

    <% end %>
  </div>
</nav>
